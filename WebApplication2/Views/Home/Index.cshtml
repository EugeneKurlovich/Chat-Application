@model string
@{
    ViewData["Title"] = "Home Page";
}
<style>
    body {
        margin: 0px;
        padding: 0px;
        background: black;
    }
    .bubblee-in {
        border-radius: 5px;
        padding: 8px;
        background: #9bd3d4;
        position: relative;
        z-index: 2;
    }
    .msg {
        position: absolute;
        top: 71px;
        bottom: 30px;
        border: 1px solid green;
        margin-bottom: auto;
        display: block;
        overflow: scroll;
        width: 70%;
        height: 70%;
        white-space: nowrap;
        background: #9bd3d4;
    }
</style>
<div class="msg">
    <div style="position:absolute; bottom:0;" id="msgs"></div>
</div>

<div style="position:absolute;height:68px;bottom:10px;left:0; display:block;width:70%;margin-left:8%">
    <input type="text" style="max-width:unset;width:100%;max-width:100%" id="MessageField" placeholder="type message and press enter" />
</div>

@section Scripts {
    <script>
    $(function () {
        var userName = '@Model';

        var protocol = location.protocol === "https:" ? "wss:" : "ws:";
        var wsUri = protocol + "//" + window.location.host;
        var socket = new WebSocket(wsUri);
        socket.onopen = e => {
            console.log("socket opened", e);
        };

        socket.onclose = function (e) {
            console.log("socket closed", e);
        };

        socket.onmessage = function (e) {
            console.log(e);
            
            $('#msgs').append(e.data + '<br />');
        };

        socket.onerror = function (e) {
            console.error(e.data);
        };

        $('#MessageField').keypress(function (e) {
            if (e.which != 13) {
                return;
            }

            e.preventDefault();

            var message = new Date().getHours().toString() + ":" + new Date().getMinutes().toString() + " " + '<b>' + userName + '</b>' + ": "
                + '<em>' + $('#MessageField').val() + '</em>';
            socket.send(message);
            $('#MessageField').val('');
        });
    });
    </script>
}